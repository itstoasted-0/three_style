<% @post = Post.find(favorite.post_id) %>
<% user = @post.user %>
<li id="favorite-<%= favorite.id %>">
  <div class="row favorite-post">
    <div class="col-md-7">
      <p class="post-user"><%= link_to user.name, user_path(user) %></p>
      <p><%= @post.genre %></p>
      <p><%= link_to @post.content, post_path(@post) %></p>
    </div>
    <div class="col-md-3">
      <%= link_to((image_tag @post.picture.url), post_path(@post), class: 'post-picture') if @post.picture.url.present? %>
    </div>
  </div>
</li>