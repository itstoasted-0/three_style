<div class="container">
  <div class='row'>
    <div class="col-md-12">
      <%= form_with model: @post, local: true do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
          <div class = 'form-group'>
            <%= f.label :genre %>
            <%= f.select :genre, Post.genres.keys %>
          </div>
          <div class = 'form-group'>
            <%= f.label :content %>
            <%= f.text_area :content %>
          </div>
          <%= f.submit nil, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>

