<% provide(:title, "投稿の編集") %>
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_with(model: @post) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <div class = 'form-group'>
          <%= f.label :genre %>
          <%= f.select :genre, Post.genres.keys %>
        </div>
        <div class = 'form-group'>
          <%= f.label :content %>
          <%= f.text_area :content %>
        </div>
        <span class="picture">
          <%= f.label :picture %> <span class="input-unneed">※任意</span>
          <%= f.file_field :picture, accept: 'image/jpeg,image/png', class: 'form-control', id: 'post-picture' %>
          <%= image_tag(@post.picture.thumb400.url) if @post.picture.url.present? %>
        </span>
        <%= f.submit "更新する", class: "btn btn-primary" %>
        <p></p>
        <%= link_to "投稿を削除する", post_path(@post), method: :delete, data: { confirm: "本当にこの投稿を削除してよろしいですか？" } %>
      <% end %>
    </div>
  </div>
</div>


    