<% provide(:title, "#{@post.genre}") %>
<div class="container">
  <div class="row">
    <div class="col-md-4">
      <h2 class="post-genre"><%= @post.genre %></h2>
      <h2 class="post-content"><%= @post.content %></h2>
    </div>
    <div class="col-md-8">
      <span class="picture">
        <%= link_to((image_tag @post.picture.url), post_path(@post.id), class: 'post-picture') if @post.picture.url.present? %>
      </span>
    </div>
    <div class="change-post">
      <% if current_user == @post.user %>
        <%= link_to "編集", edit_post_path(@post), class: 'edit-post' %>
      <% end %>
      <% if current_user.admin? || (current_user == @post.user) %>
        <%= link_to "削除", post_path(@post), method: :delete, class: 'delete-post', data: { confirm: "本当に削除しますか？" } %>
      <% end %>
    </div>
  </div>
</div>