<div class="container pt-3">
  <%= search_form_for @q do |f| %>
    <div class="row">
      <div class="col-md-9">
        <div class='form-group'>
          <%= f.search_field :content_or_user_name_cont, placeholder: "投稿、ユーザー名を検索", class: 'form-control font-awesome', required: true %>
        </div>
      </div>
      <div class="col-md-2">
        <div class='form-group'>
          <%= f.submit nil, class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  <% end %>
</div>