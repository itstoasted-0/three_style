<%= search_form_for @q do |f| %>
  <div class="row">
    <div class="col-8">
      <div class="form-group">
        <%= f.search_field :content_or_user_name_cont, placeholder: "投稿・ユーザーを検索", class: 'form-control font-awesome', required: true %>
      </div>
    </div>
    <div class="col-3">
      <div class="form-group">
        <%= f.submit nil, class: 'btn btn-outline-success my-2 my-sm-0' %>
      </div>
    </div>
  </div>
<% end %>